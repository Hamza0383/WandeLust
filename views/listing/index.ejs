<% layout("/layouts/boilerplate") %>
<body>
  <h1>All Listing</h1>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListing) {%>
    <a href="/listing/<%= listing._id %>" class="listing-link">
      <div class="card">
        <img
          src="<%= listing.image %>"
          class="card-img-top"
          alt="listing-image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <strong> <%= listing.title %></strong> <br />&#x24; <%=
            listing.price.toLocaleString("en-US") %> / night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
